{
  "manifest_version": 3,
  "name": "Skylight Research",
  "version": "1.1",
  "icons": {
    "128": "Icon-128.png"
  },
  "action": {
    "default_icon": {
      "128": "Icon-128.png"
    }
  },
  "commands": {
    "quick-highlight": {
      "suggested_key": { "default": "Alt+H" },
      "description": "Highlight selection, add notes, and manage all notes in a manager page."
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}